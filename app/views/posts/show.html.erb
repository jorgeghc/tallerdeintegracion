<h1><%= @post.title %></h1>
<h2><%= @post.headline %></h2>
<p> <%= @post.body %></p>
<p> <%= @post.created_at %></p>


<h3>Comments</h3>
<% @post.comments.each do |comment|%>
  <div class="well">
    <h4><%= comment.username%></h4>
    <p><%= comment.body%></p>

  </div>
<% end %>


<h3>Add a comment</h3>
<%= form_for([@post, @post.comments.build]) do |f|%>
  <p>
    <%=f.label :username%><br>
    <%=f.text_field(:username, {:class => 'form-control'})%>
  </p>

  <p>
    <%=f.label :body%><br>
    <%=f.text_area(:body, {:class => 'form-control'})%>
  </p>

  <p>
   <%=f.submit({:class => 'btn btn-primary'})%>
  </p>
<% end %>
